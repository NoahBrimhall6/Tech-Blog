<div class="row">
  <div class="col alert alert-danger" role="alert" style="display: none"></div>
</div>

<div class="row">

  <div class="col col-md-6">
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="card col" id="{{post.id}}">
        <div class="card-body">
          <h5 class="card-title">{{post.title}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{post.user.username}} - {{post.createdAt}}</h6>
          <p class="card-text">{{post.body}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="col-12 col-sm-6">
    <h2 class="pb-3 border-bottom border-secondary">Create Post</h2>
    <form>
      <div class="mb-3">
        <label for="productPrice" class="form-label">Title</label>
        <input type="text" class="form-control" id="postTitle">
      </div>
      <div class="mb-3">
        <label for="productDesc" class="form-label">Text</label>
        <textarea class="form-control" id="postBody" rows="6"></textarea>
      </div>
      <button type="submit" class="btn btn-primary" id="postBtn">Post</button>
    </form>
  </div>
</div>

<script src="/js/dashboard.js"></script>